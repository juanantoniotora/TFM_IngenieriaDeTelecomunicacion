pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/juanantoniotora/TFM_IngenieriaDeTelecomunicacion.git'
            }
        }

        stage('Build') {
            steps {
                dir('App BackTutorial\demo') {
                    sh 'mvn clean package -DskipTests'
                }
            }
        }

        stage('Test') {
            steps {
                dir('App BackTutorial\demo') {
                    sh 'mvn test'
                }
            }
        }

        stage('Run') {
            steps {
                dir('App BackTutorial\demo') {
                    sh 'java -jar target/*.jar &'
                }
            }
        }
    }
}
